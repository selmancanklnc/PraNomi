            </DatePicker>

            <TimePicker Time="{Binding Time}" Format="t"/>
            <Label IsVisible="false" x:Name="MainLabel" Text="{Binding Date, Source={x:Reference MainDatePicker}}" FontSize="10" HorizontalOptions="Center"/>

